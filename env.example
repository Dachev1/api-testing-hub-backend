# API Testing Hub Environment Variables
# Copy this file to .env and update the values as needed

# GitHub Models / OpenAI GPT-4.1 Configuration
GITHUB_TOKEN=your-github-models-token-here
GITHUB_MODELS_ENDPOINT=https://models.inference.ai.azure.com
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Application Configuration
APP_REQUEST_TIMEOUT=30000
APP_REQUEST_MAX_SIZE=10MB

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# Server Configuration
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api/v1

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO

# Production Database (if needed in future)
# DATABASE_URL=jdbc:postgresql://localhost:5432/apitestinghub
# DATABASE_USERNAME=apitestinghub
# DATABASE_PASSWORD=password